{% doc %}
  @prompt
    Create a customizable banner carousel section with blocks for multiple banners. Each banner block should have image upload, heading, subheading, button text, button link, text alignment, and overlay opacity. Include autoplay toggle, transition speed, and navigation dots. Fully editable and deletable through sidebar blocks., height and width can be customized  by admin and also can customize everything, also margin and padding 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {% if block.settings.full_width %}100%{% else %}{{ block.settings.max_width }}px{% endif %};
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-banner-carousel__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
  }

  .ai-banner-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-banner-carousel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-banner-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-carousel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-banner-carousel__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, var(--ai-overlay-opacity-{{ ai_gen_id }}));
    pointer-events: none;
  }

  .ai-banner-carousel__content-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.content_vertical_position }}%;
    width: 90%;
    max-width: {{ block.settings.content_max_width }}px;
    z-index: 2;
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-banner-carousel__content--left-{{ ai_gen_id }} {
    left: {{ block.settings.content_horizontal_offset }}%;
    transform: translate(0, -50%);
  }

  .ai-banner-carousel__content--center-{{ ai_gen_id }} {
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .ai-banner-carousel__content--right-{{ ai_gen_id }} {
    right: {{ block.settings.content_horizontal_offset }}%;
    transform: translate(0, -50%);
  }

  .ai-banner-carousel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: {{ block.settings.heading_line_height }};
    color: {{ block.settings.heading_color }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .ai-banner-carousel__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: {{ block.settings.subheading_line_height }};
    color: {{ block.settings.subheading_color }};
    opacity: {{ block.settings.subheading_opacity | divided_by: 100.0 }};
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
  }

  .ai-banner-carousel__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    font-weight: {{ block.settings.button_font_weight }};
  }

  .ai-banner-carousel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY({{ block.settings.button_hover_lift }}px);
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .ai-banner-carousel-{{ ai_gen_id }} {
      max-width: 100%;
      margin-top: {{ block.settings.margin_top | times: 0.75 }}px;
      margin-bottom: {{ block.settings.margin_bottom | times: 0.75 }}px;
    }

    .ai-banner-carousel__viewport-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height | times: 0.85 }}px;
      padding-top: {{ block.settings.padding_top | times: 0.85 }}px;
      padding-bottom: {{ block.settings.padding_bottom | times: 0.85 }}px;
      padding-left: {{ block.settings.padding_left | times: 0.85 }}px;
      padding-right: {{ block.settings.padding_right | times: 0.85 }}px;
    }

    .ai-banner-carousel__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-banner-carousel__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-banner-carousel__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.9 }}px {{ block.settings.button_padding_horizontal | times: 0.9 }}px;
    }

    .ai-banner-carousel__content-{{ ai_gen_id }} {
      max-width: {{ block.settings.content_max_width | times: 0.85 }}px;
      width: 85%;
    }
  }
  
  @media screen and (max-width: 749px) {
    .ai-banner-carousel-{{ ai_gen_id }} {
      max-width: 100%;
      margin-top: {{ block.settings.margin_top_mobile }}px;
      margin-bottom: {{ block.settings.margin_bottom_mobile }}px;
      overflow: hidden;
    }

    .ai-banner-carousel__viewport-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
      min-height: 250px;
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_left_mobile }}px;
      padding-right: {{ block.settings.padding_right_mobile }}px;
    }

    .ai-banner-carousel__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
      margin-bottom: {{ block.settings.heading_spacing | divided_by: 2 }}px;
    }

    .ai-banner-carousel__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
      margin-bottom: {{ block.settings.subheading_spacing | divided_by: 2 }}px;
    }

    .ai-banner-carousel__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size_mobile }}px;
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    }

    .ai-banner-carousel__content-{{ ai_gen_id }} {
      width: 90%;
      max-width: 100%;
      padding: {{ block.settings.content_padding | divided_by: 2 }}px;
    }

    .ai-banner-carousel__content--left-{{ ai_gen_id }},
    .ai-banner-carousel__content--right-{{ ai_gen_id }} {
      {% if block.settings.center_content_mobile %}
        left: 50%;
        right: auto;
        transform: translate(-50%, -50%);
      {% endif %}
    }

    .ai-banner-carousel__image-{{ ai_gen_id }} {
      object-position: center;
    }
  }
{% endstyle %}

<div
  class="ai-banner-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-banner-carousel__viewport-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-banner-carousel__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-carousel__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-banner-carousel__empty-state-{{ ai_gen_id }}">
          Add an image to this banner
        </div>
      </div>
    {% endif %}

    <div
      class="ai-banner-carousel__overlay-{{ ai_gen_id }}"
      style="--ai-overlay-opacity-{{ ai_gen_id }}: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"
    ></div>

    {% if block.settings.heading != blank or block.settings.subheading != blank or block.settings.button_text != blank %}
      <div class="ai-banner-carousel__content-{{ ai_gen_id }} ai-banner-carousel__content--{{ block.settings.text_alignment }}-{{ ai_gen_id }}" style="text-align: {{ block.settings.text_alignment }};">
        {% if block.settings.heading != blank %}
          <h2 class="ai-banner-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.subheading != blank %}
          <p class="ai-banner-carousel__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-banner-carousel__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

