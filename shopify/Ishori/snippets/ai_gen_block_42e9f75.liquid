<watch-shop-carousel-{{ ai_gen_id }} class="ai-watch-shop-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-watch-shop-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-watch-shop-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-watch-shop-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-watch-shop-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_videos = false %}
    {% for i in (1..4) %}
      {% assign video_key = 'video_' | append: i %}
      {% assign video_url_key = 'video_url_' | append: i %}
      {% if block.settings[video_key] != blank or block.settings[video_url_key] != blank %}
        {% assign has_videos = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_videos %}
      <div class="ai-watch-shop-carousel-wrapper-{{ ai_gen_id }}">
        <button
          class="ai-watch-shop-nav-button-{{ ai_gen_id }} prev"
          aria-label="Previous videos"
          data-direction="prev"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-watch-shop-carousel-{{ ai_gen_id }}">
          {% for i in (1..4) %}
            {% liquid
              assign video_key = 'video_' | append: i
              assign video_url_key = 'video_url_' | append: i
              assign product_title_key = 'product_title_' | append: i
              assign product_link_key = 'product_link_' | append: i
              assign current_price_key = 'current_price_' | append: i
              assign original_price_key = 'original_price_' | append: i
              assign discount_key = 'discount_' | append: i

              assign video_file = block.settings[video_key]
              assign video_url = block.settings[video_url_key]
              assign product_title = block.settings[product_title_key]
              assign product_link = block.settings[product_link_key]
              assign current_price = block.settings[current_price_key]
              assign original_price = block.settings[original_price_key]
              assign discount = block.settings[discount_key]
            %}

            {% if video_file != blank or video_url != blank %}
              <div class="ai-watch-shop-card-{{ ai_gen_id }}" data-video-index="{{ i }}">
                <div class="ai-watch-shop-video-wrapper-{{ ai_gen_id }}">
                  {% if discount != blank and discount > 0 %}
                    <div class="ai-watch-shop-badge-{{ ai_gen_id }}">-{{ discount }}%</div>
                  {% endif %}

                  {% if video_file != blank %}
                    <video loop muted playsinline data-video-element>
                      {% for source in video_file.sources %}
                        <source src="{{ source.url }}" type="{{ source.mime_type }}">
                      {% endfor %}
                    </video>
                  {% elsif video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
                    {% liquid
                      assign video_id = ''
                      if video_url contains 'youtube.com/watch?v='
                        assign video_id = video_url | split: 'v=' | last | split: '&' | first
                      elsif video_url contains 'youtu.be/'
                        assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first
                      endif
                    %}
                    <iframe
                      src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&mute=1&loop=1&playlist={{ video_id }}"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                      loading="lazy"
                      data-video-element
                      data-video-type="youtube"
                    ></iframe>
                  {% elsif video_url contains 'vimeo.com' %}
                    {% assign video_id = video_url | split: 'vimeo.com/' | last | split: '/' | first %}
                    <iframe
                      src="https://player.vimeo.com/video/{{ video_id }}?background=1&loop=1&muted=1"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                      loading="lazy"
                      data-video-element
                      data-video-type="vimeo"
                    ></iframe>
                  {% elsif video_url != blank %}
                    <video loop muted playsinline data-video-element>
                      <source src="{{ video_url }}" type="video/mp4">
                    </video>
                  {% endif %}
                </div>

                <div class="ai-watch-shop-card-content-{{ ai_gen_id }}">
                  {% if product_title != blank %}
                    <h3 class="ai-watch-shop-product-title-{{ ai_gen_id }}">
                      {% if product_link != blank %}
                        <a href="{{ product_link }}">{{ product_title }}</a>
                      {% else %}
                        {{ product_title }}
                      {% endif %}
                    </h3>
                  {% endif %}

                  {% if current_price != blank %}
                    <div class="ai-watch-shop-price-wrapper-{{ ai_gen_id }}">
                      <span class="ai-watch-shop-price-{{ ai_gen_id }}">{{ current_price }}</span>
                      {% if original_price != blank %}
                        <span class="ai-watch-shop-original-price-{{ ai_gen_id }}">{{ original_price }}</span>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <button
          class="ai-watch-shop-nav-button-{{ ai_gen_id }} next"
          aria-label="Next videos"
          data-direction="next"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% else %}
      <div class="ai-watch-shop-empty-state-{{ ai_gen_id }}">
        <p>Add videos to display your Watch & Shop carousel</p>
      </div>
    {% endif %}
  </div>
</watch-shop-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class WatchShopCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.isMobile = window.innerWidth <= 990;
        this.visibleVideos = new Set();
        this.currentIndex = 0;
      }

      connectedCallback() {
        this.carousel = this.querySelector('.ai-watch-shop-carousel-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-watch-shop-nav-button-{{ ai_gen_id }}.prev');
        this.nextButton = this.querySelector('.ai-watch-shop-nav-button-{{ ai_gen_id }}.next');
        this.cards = Array.from(this.querySelectorAll('.ai-watch-shop-card-{{ ai_gen_id }}'));
        this.videos = Array.from(this.querySelectorAll('[data-video-element]'));

        if (this.carousel && this.prevButton && this.nextButton) {
          this.setupInfiniteCarousel();
          this.setupNavigation();
          this.setupVideoPlayback();
          this.setupIntersectionObserver();
          
          window.addEventListener('resize', () => {
            const wasMobile = this.isMobile;
            this.isMobile = window.innerWidth <= 990;
            if (wasMobile !== this.isMobile) {
              this.pauseAllVideos();
              this.setupIntersectionObserver();
            }
          });
        }
      }

      setupInfiniteCarousel() {
        const originalCards = this.cards.slice();
        originalCards.forEach(card => {
          const clone = card.cloneNode(true);
          const videoElement = clone.querySelector('[data-video-element]');
          if (videoElement) {
            if (videoElement.tagName === 'VIDEO') {
              videoElement.load();
            }
          }
          this.carousel.appendChild(clone);
        });

        this.cards = Array.from(this.querySelectorAll('.ai-watch-shop-card-{{ ai_gen_id }}'));
        this.videos = Array.from(this.querySelectorAll('[data-video-element]'));
      }

      setupNavigation() {
        this.prevButton.addEventListener('click', () => this.scroll('prev'));
        this.nextButton.addEventListener('click', () => this.scroll('next'));

        this.carousel.addEventListener('scroll', () => {
          this.handleInfiniteScroll();
          if (!this.isMobile) {
            this.checkVisibleVideos();
          }
        });
      }

      scroll(direction) {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.carousel).gap) || 20;
        const scrollAmount = this.isMobile ? (cardWidth + gap) : (cardWidth + gap) * 3;
        const currentScroll = this.carousel.scrollLeft;

        if (direction === 'prev') {
          this.carousel.scrollTo({
            left: currentScroll - scrollAmount,
            behavior: 'smooth'
          });
        } else {
          this.carousel.scrollTo({
            left: currentScroll + scrollAmount,
            behavior: 'smooth'
          });
        }
      }

      handleInfiniteScroll() {
        const scrollLeft = this.carousel.scrollLeft;
        const cardWidth = this.cards[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.carousel).gap) || 20;
        const singleSetWidth = (cardWidth + gap) * (this.cards.length / 2);

        if (scrollLeft >= singleSetWidth) {
          this.carousel.scrollLeft = scrollLeft - singleSetWidth;
        } else if (scrollLeft <= 0) {
          this.carousel.scrollLeft = singleSetWidth;
        }
      }

      setupVideoPlayback() {
        if (!this.isMobile) {
          this.cards.forEach(card => {
            const videoElement = card.querySelector('[data-video-element]');
            if (videoElement) {
              card.addEventListener('mouseenter', () => {
                this.playVideo(videoElement);
              });
              card.addEventListener('mouseleave', () => {
                this.pauseVideo(videoElement);
              });
            }
          });
        }
      }

      setupIntersectionObserver() {
        if (this.observer) {
          this.observer.disconnect();
        }

        if (this.isMobile) {
          const options = {
            root: null,
            rootMargin: '0px',
            threshold: 0.5
          };

          this.observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              const videoElement = entry.target.querySelector('[data-video-element]');
              if (videoElement) {
                if (entry.isIntersecting) {
                  this.playVideo(videoElement);
                } else {
                  this.pauseVideo(videoElement);
                }
              }
            });
          }, options);

          this.cards.forEach(card => {
            this.observer.observe(card);
          });
        } else {
          this.checkVisibleVideos();
        }
      }

      checkVisibleVideos() {
        if (this.isMobile) return;

        const carouselRect = this.carousel.getBoundingClientRect();
        
        this.cards.forEach(card => {
          const cardRect = card.getBoundingClientRect();
          const videoElement = card.querySelector('[data-video-element]');
          
          if (!videoElement) return;

          const isVisible = cardRect.left >= carouselRect.left - 50 && 
                          cardRect.right <= carouselRect.right + 50;

          const cardId = card.dataset.videoIndex;
          
          if (isVisible && !this.visibleVideos.has(cardId)) {
            this.visibleVideos.add(cardId);
          } else if (!isVisible && this.visibleVideos.has(cardId)) {
            this.visibleVideos.delete(cardId);
            this.pauseVideo(videoElement);
          }
        });
      }

      playVideo(videoElement) {
        if (!videoElement) return;

        const videoType = videoElement.dataset.videoType;

        if (videoType === 'youtube') {
          videoElement.contentWindow.postMessage(JSON.stringify({
            event: 'command',
            func: 'playVideo',
            args: ''
          }), '*');
        } else if (videoType === 'vimeo') {
          videoElement.contentWindow.postMessage(JSON.stringify({
            method: 'play'
          }), '*');
        } else if (videoElement.tagName === 'VIDEO') {
          videoElement.play().catch(() => {});
        }
      }

      pauseVideo(videoElement) {
        if (!videoElement) return;

        const videoType = videoElement.dataset.videoType;

        if (videoType === 'youtube') {
          videoElement.contentWindow.postMessage(JSON.stringify({
            event: 'command',
            func: 'pauseVideo',
            args: ''
          }), '*');
        } else if (videoType === 'vimeo') {
          videoElement.contentWindow.postMessage(JSON.stringify({
            method: 'pause'
          }), '*');
        } else if (videoElement.tagName === 'VIDEO') {
          videoElement.pause();
        }
      }

      pauseAllVideos() {
        this.videos.forEach(video => {
          this.pauseVideo(video);
        });
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }
    }

    customElements.define('watch-shop-carousel-{{ ai_gen_id }}', WatchShopCarousel{{ ai_gen_id }});
  })();
</script>

