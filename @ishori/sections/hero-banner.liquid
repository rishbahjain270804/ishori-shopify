<div class="hero-section" style="background-image: url('{{ section.settings.hero_image | image_url: width: 2000 }}');">
  {% if section.settings.video_url != blank %}
    <video autoplay muted loop playsinline class="hero-video">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {% endif %}
  
  <div class="hero-overlay"></div>
  
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title | default: 'Exquisite Handcrafted Sarees' }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle | default: 'Celebrating Indian Tradition & Elegance' }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-large">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
  .hero-section {
    position: relative;
    height: 80vh;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-size: cover;
    background-position: center;
  }

  .hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    z-index: 0;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(60, 3, 11, 0.7), rgba(95, 5, 17, 0.5));
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 2rem;
  }

  .hero-title {
    font-size: 6rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 2.4rem;
    margin-bottom: 3rem;
    opacity: 0.95;
  }

  .btn-large {
    padding: 1.8rem 4rem;
    font-size: 1.8rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      height: 60vh;
      min-height: 400px;
    }

    .hero-title {
      font-size: 3.6rem;
    }

    .hero-subtitle {
      font-size: 1.8rem;
    }

    .btn-large {
      padding: 1.4rem 3rem;
      font-size: 1.6rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Background Video URL (MP4)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Exquisite Handcrafted Sarees"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Celebrating Indian Tradition & Elegance"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
