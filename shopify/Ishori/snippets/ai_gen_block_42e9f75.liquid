{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-watch-shop-{{ ai_gen_id }} {
    padding: 40px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-watch-shop-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-watch-shop-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-watch-shop-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
  }

  .ai-watch-shop-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-watch-shop-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-watch-shop-carousel-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
    scroll-snap-type: x mandatory;
  }

  .ai-watch-shop-carousel-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-watch-shop-card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
    scroll-snap-align: start;
  }

  .ai-watch-shop-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-watch-shop-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: auto;
    height: 38vh;
    max-height: 38vh;
    background-color: #000;
    overflow: hidden;
  }

  .ai-watch-shop-video-wrapper-{{ ai_gen_id }} iframe,
  .ai-watch-shop-video-wrapper-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    border: none;
    object-fit: cover;
  }

  .ai-watch-shop-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-watch-shop-card-content-{{ ai_gen_id }} {
    padding: 20px;
    width: calc(38vh * 9 / 16);
  }

  .ai-watch-shop-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 10px;
    font-weight: 600;
  }

  .ai-watch-shop-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-watch-shop-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-watch-shop-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .ai-watch-shop-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-watch-shop-original-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size | times: 0.9 }}px;
    color: {{ block.settings.original_price_color }};
    text-decoration: line-through;
  }

  .ai-watch-shop-nav-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_background }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
