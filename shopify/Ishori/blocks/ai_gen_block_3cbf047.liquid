{% doc %}
  @prompt
    create a section where a video play on a loop and also on auto so no need to start as website loaded and video start playing on hero section, Shopify-hosted video
{% enddoc %}
{% liquid
  assign ai_gen_id = block.id | replace: '_', '' | downcase
  comment
    Generate unique ID for CSS classes without displaying it
  endcomment
%}

{% style %}
  .ai-video-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0;
  }

  .ai-video-hero__video-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-video-hero__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-hero__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-video-hero__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 20px;
  }

  .ai-video-hero__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-video-hero__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-video-hero__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 16px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-video-hero__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-video-hero__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-hero__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-video-hero__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .ai-video-hero-{{ ai_gen_id }} {
      height: {{ block.settings.desktop_height | minus: 15 }}vh;
    }

    .ai-video-hero__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-video-hero__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-video-hero__content-{{ ai_gen_id }} {
      padding: 18px;
      max-width: {{ block.settings.content_max_width | times: 0.9 }}px;
    }

    .ai-video-hero__button-{{ ai_gen_id }} {
      padding: 12px 28px;
      font-size: 15px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .ai-video-hero-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}vh;
      min-height: 300px;
      margin-bottom: 0;
    }

    .ai-video-hero__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
      margin-bottom: 12px;
    }

    .ai-video-hero__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.75 }}px;
      margin-bottom: 20px;
    }

    .ai-video-hero__content-{{ ai_gen_id }} {
      padding: 16px;
      max-width: 90%;
    }

    .ai-video-hero__button-{{ ai_gen_id }} {
      padding: 10px 24px;
      font-size: 14px;
    }
    
    .ai-video-hero__video-{{ ai_gen_id }} {
      object-position: center center;
    }
  }
{% endstyle %}

<div class="ai-video-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-hero__video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video != blank %}
      {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'ai-video-hero__video-' | append: ai_gen_id }}
    {% else %}
      <div class="ai-video-hero__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-video-hero__empty-state-{{ ai_gen_id }}">
          Next, add a video
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-video-hero__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-video-hero__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-video-hero__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-video-hero__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-video-hero__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

