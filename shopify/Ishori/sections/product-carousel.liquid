{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .product-carousel-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .product-carousel__heading {
    text-align: center;
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 40px;
    font-weight: 600;
  }

  .product-carousel__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-carousel__slider {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: calc((100% - ({{ section.settings.desktop_columns | minus: 1 }} * {{ section.settings.gap }}px)) / {{ section.settings.desktop_columns }});
    gap: {{ section.settings.gap }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 20px;
  }

  .product-carousel__slider::-webkit-scrollbar {
    display: none;
  }

  .product-carousel__item {
    scroll-snap-align: start;
  }

  .product-carousel__card {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_radius }}px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-carousel__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }

  .product-carousel__image {
    transition: transform 0.4s ease;
  }

  .product-carousel__card:hover .product-carousel__image {
    transform: scale(1.05);
  }

  .product-carousel__image-wrapper {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.image_max_width }}px;
    margin: 0 auto;
    aspect-ratio: 9 / 16;
    overflow: hidden;
  }

  .product-carousel__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-carousel__info {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .product-carousel__title {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .product-carousel__title a {
    text-decoration: none;
    color: inherit;
  }

  .product-carousel__title a:hover {
    color: {{ section.settings.accent_color }};
  }

  .product-carousel__price {
    font-size: {{ section.settings.price_size }}px;
    color: {{ section.settings.price_color }};
    font-weight: 600;
    margin-bottom: 12px;
  }

  .product-carousel__button {
    display: inline-block;
    width: 100%;
    padding: 12px 24px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    text-align: center;
    text-decoration: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .product-carousel__button:hover {
    background-color: {{ section.settings.button_hover_bg }};
  }

  .product-carousel__nav {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 32px;
  }

  .product-carousel__nav-button {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: {{ section.settings.nav_bg }};
    border: 2px solid {{ section.settings.nav_border }};
    color: {{ section.settings.nav_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .product-carousel__nav-button:hover {
    background: {{ section.settings.nav_hover_bg }};
    color: {{ section.settings.nav_hover_color }};
    transform: scale(1.1);
  }

  .product-carousel__nav-button svg {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 989px) {
    .product-carousel__slider {
      grid-auto-columns: calc((100% - ({{ section.settings.mobile_columns | minus: 1 }} * {{ section.settings.gap | divided_by: 2 }}px)) / {{ section.settings.mobile_columns }});
      gap: {{ section.settings.gap | divided_by: 2 }}px;
    }

    .product-carousel__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 24px;
    }

    .product-carousel__image-wrapper {
      max-width: 100%;
    }
  }
{%- endstyle -%}

<div class="product-carousel-{{ section.id }}">
  <div class="product-carousel__container">
    {% if section.settings.heading != blank %}
      <h2 class="product-carousel__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="product-carousel__slider" id="carousel-{{ section.id }}">
      {% if section.settings.collection != blank %}
        {% assign collection = collections[section.settings.collection] %}
        {% for product in collection.products limit: section.settings.products_to_show %}
          <div class="product-carousel__item">
            <div class="product-carousel__card">
              <a href="{{ product.url }}" class="product-carousel__image-wrapper">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.title | escape }}"
                    class="product-carousel__image"
                    width="800"
                    height="{{ 800 | divided_by: product.featured_image.aspect_ratio | round }}"
                    loading="lazy"
                  >
                {% else %}
                  <div style="background: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                    No Image
                  </div>
                {% endif %}
              </a>
              <div class="product-carousel__info">
                <h3 class="product-carousel__title">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
                <div class="product-carousel__price">
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; opacity: 0.6; margin-right: 8px;">
                      {{ product.compare_at_price | money }}
                    </span>
                    <span style="color: #8a0a1e;">{{ product.price | money }}</span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
                <a href="{{ product.url }}" class="product-carousel__button">
                  {{ section.settings.button_text }}
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p style="text-align: center; width: 100%;">Please select a collection in theme settings</p>
      {% endif %}
    </div>

    {% if section.settings.show_navigation %}
      <div class="product-carousel__nav">
        <button class="product-carousel__nav-button" onclick="scrollCarousel('{{ section.id }}', -1)">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="product-carousel__nav-button" onclick="scrollCarousel('{{ section.id }}', 1)">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function scrollCarousel(sectionId, direction) {
    const carousel = document.getElementById('carousel-' + sectionId);
    const scrollAmount = carousel.offsetWidth * 0.8 * direction;
    carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
  }

  // Auto-scroll functionality
  {% if section.settings.enable_autoplay %}
    (function() {
      const carousel = document.getElementById('carousel-{{ section.id }}');
      let autoplayInterval;

      function startAutoplay() {
        autoplayInterval = setInterval(() => {
          const maxScroll = carousel.scrollWidth - carousel.clientWidth;
          if (carousel.scrollLeft >= maxScroll) {
            carousel.scrollTo({ left: 0, behavior: 'smooth' });
          } else {
            carousel.scrollBy({ left: carousel.offsetWidth * 0.8, behavior: 'smooth' });
          }
        }, {{ section.settings.autoplay_speed }});
      }

      function stopAutoplay() {
        clearInterval(autoplayInterval);
      }

      carousel.addEventListener('mouseenter', stopAutoplay);
      carousel.addEventListener('mouseleave', startAutoplay);

      startAutoplay();
    })();
  {% endif %}
</script>

