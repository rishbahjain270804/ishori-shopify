{% doc %}
  @prompt
    Create an elegant image gallery with infinite loop carousel. Include blocks for adding/removing images with captions. Add autoplay with smooth infinite scrolling, navigation arrows, dots, and lightbox on click. Settings for slides per view (2-4), autoplay speed, spacing, hover effects, and gallery heading. Perfect for showcasing saree craftsmanship. Premium minimal design. Fully customizable through sidebar.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gallery-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-gallery-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-gallery-heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  .ai-gallery-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-gallery-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.slide_spacing }}px;
    transition: transform 0.5s ease;
  }

  .ai-gallery-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.slides_per_view | minus: 1 }} * {{ block.settings.slide_spacing }}px)) / {{ block.settings.slides_per_view }});
    position: relative;
    cursor: pointer;
    overflow: hidden;
    border-radius: {{ block.settings.image_radius }}px;
  }

  .ai-gallery-slide-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 133%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-gallery-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  {% if block.settings.hover_effect == 'zoom' %}
    .ai-gallery-slide-{{ ai_gen_id }}:hover .ai-gallery-slide-image-{{ ai_gen_id }} {
      transform: scale(1.1);
    }
  {% elsif block.settings.hover_effect == 'lift' %}
    .ai-gallery-slide-{{ ai_gen_id }} {
      transition: transform 0.3s ease;
    }
    .ai-gallery-slide-{{ ai_gen_id }}:hover {
      transform: translateY(-8px);
    }
  {% elsif block.settings.hover_effect == 'fade' %}
    .ai-gallery-slide-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0);
      transition: background-color 0.3s ease;
      pointer-events: none;
    }
    .ai-gallery-slide-{{ ai_gen_id }}:hover::after {
      background-color: rgba(0, 0, 0, 0.2);
    }
  {% endif %}

  .ai-gallery-slide-caption-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    color: #ffffff;
    font-size: 14px;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-gallery-slide-{{ ai_gen_id }}:hover .ai-gallery-slide-caption-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-gallery-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    background-color: {{ block.settings.nav_color }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    opacity: 0.9;
  }

  .ai-gallery-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_hover_color }};
    opacity: 1;
  }

  .ai-gallery-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    stroke: {{ block.settings.nav_icon_color }};
  }

  .ai-gallery-nav-prev-{{ ai_gen_id }} {
    left: 10px;
  }

  .ai-gallery-nav-next-{{ ai_gen_id }} {
    right: 10px;
  }

  .ai-gallery-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
  }

  .ai-gallery-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease, transform 0.3s ease;
    opacity: 0.4;
  }

  .ai-gallery-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-gallery-lightbox-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .ai-gallery-lightbox-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-gallery-lightbox-content-{{ ai_gen_id }} {
    position: relative;
    max-width: 90%;
    max-height: 90%;
  }

  .ai-gallery-lightbox-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 8px;
  }

  .ai-gallery-lightbox-caption-{{ ai_gen_id }} {
    position: absolute;
    bottom: -40px;
    left: 0;
    right: 0;
    text-align: center;
    color: #ffffff;
    font-size: 16px;
  }

  .ai-gallery-lightbox-close-{{ ai_gen_id }} {
    position: absolute;
    top: -50px;
    right: 0;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    color: #ffffff;
    font-size: 32px;
    line-height: 1;
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background-color: rgba(255, 255, 255, 0.2);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 0.3);
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    stroke: #ffffff;
  }

  .ai-gallery-lightbox-prev-{{ ai_gen_id }} {
    left: -70px;
  }

  .ai-gallery-lightbox-next-{{ ai_gen_id }} {
    right: -70px;
  }

  @media screen and (max-width: 989px) {
    .ai-gallery-slide-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - {{ block.settings.slide_spacing }}px);
    }

    .ai-gallery-nav-{{ ai_gen_id }} {
      width: 36px;
      height: 36px;
    }

    .ai-gallery-lightbox-prev-{{ ai_gen_id }},
    .ai-gallery-lightbox-next-{{ ai_gen_id }} {
      left: 10px;
      right: auto;
    }

    .ai-gallery-lightbox-next-{{ ai_gen_id }} {
      left: auto;
      right: 10px;
    }
  }

  @media screen and (min-width: 990px) and (max-width: 1200px) {
    .ai-gallery-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.slide_spacing }}px) / 2);
    }
  }
