{%- style -%}
  .custom-poster-{{ section.id }} {
    padding-top: {{ section.settings.margin_top }}px;
    padding-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.section_bg }};
  }

  .custom-poster__container-{{ section.id }} {
    max-width: {{ section.settings.container_width }}%;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .custom-poster__wrapper-{{ section.id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    box-shadow: 0 {{ section.settings.shadow_vertical }}px {{ section.settings.shadow_blur }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .custom-poster__image-{{ section.id }} {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: {{ section.settings.image_fit }};
    display: block;
    transition: transform 0.4s ease;
  }

  .custom-poster__wrapper-{{ section.id }}:hover .custom-poster__image-{{ section.id }} {
    transform: scale(1.05);
  }

  .custom-poster__overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .custom-poster__content-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
    z-index: 2;
    width: 90%;
    max-width: {{ section.settings.content_max_width }}px;
    padding: {{ section.settings.content_padding }}px;
  }

  .custom-poster__heading-{{ section.id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 {{ section.settings.heading_spacing }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
  }

  .custom-poster__subheading-{{ section.id }} {
    font-size: {{ section.settings.subheading_size }}px;
    margin: 0 0 {{ section.settings.subheading_spacing }}px;
    line-height: 1.5;
    opacity: {{ section.settings.subheading_opacity | divided_by: 100.0 }};
  }

  .custom-poster__button-{{ section.id }} {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    transition: all 0.3s ease;
  }

  .custom-poster__button-{{ section.id }}:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(95, 5, 17, 0.3);
  }

  @media screen and (max-width: 989px) {
    .custom-poster__wrapper-{{ section.id }} {
      aspect-ratio: {{ section.settings.mobile_aspect_ratio }};
    }

    .custom-poster__image-{{ section.id }} {
      height: {{ section.settings.mobile_image_height }}px;
    }

    .custom-poster__heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    .custom-poster__subheading-{{ section.id }} {
      font-size: {{ section.settings.subheading_size_mobile }}px;
    }

    .custom-poster__button-{{ section.id }} {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
    }
  }
{%- endstyle -%}

<div class="custom-poster-{{ section.id }}">
  <div class="custom-poster__container-{{ section.id }}">
    <div class="custom-poster__wrapper-{{ section.id }}">
      {% if section.settings.image != blank %}
        {% if section.settings.link != blank %}
          <a href="{{ section.settings.link }}">
            <img
              src="{{ section.settings.image | image_url: width: 2000 }}"
              alt="{{ section.settings.image.alt | escape }}"
              class="custom-poster__image-{{ section.id }}"
              width="2000"
              height="{{ 2000 | divided_by: section.settings.image.aspect_ratio | round }}"
              loading="lazy"
            >
          </a>
        {% else %}
          <img
            src="{{ section.settings.image | image_url: width: 2000 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="custom-poster__image-{{ section.id }}"
            width="2000"
            height="{{ 2000 | divided_by: section.settings.image.aspect_ratio | round }}"
            loading="lazy"
          >
        {% endif %}
      {% else %}
        <div style="background: {{ section.settings.placeholder_bg_color }}; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
          Select an image
        </div>
      {% endif %}

      {% if section.settings.show_overlay %}
        <div class="custom-poster__overlay-{{ section.id }}"></div>
      {% endif %}

      {% if section.settings.heading != blank or section.settings.subheading != blank or section.settings.button_text != blank %}
        <div class="custom-poster__content-{{ section.id }}">
          {% if section.settings.heading != blank %}
            <h2 class="custom-poster__heading-{{ section.id }}">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="custom-poster__subheading-{{ section.id }}">{{ section.settings.subheading }}</p>
          {% endif %}
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="custom-poster__button-{{ section.id }}">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

