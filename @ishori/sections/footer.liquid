<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- About Column -->
      <div class="footer-column">
        <h3 class="footer-title">About Ishori</h3>
        <p>{{ settings.footer_about_text | default: 'Exquisite handcrafted sarees celebrating Indian tradition and elegance.' }}</p>
      </div>

      <!-- Quick Links -->
      <div class="footer-column">
        <h3 class="footer-title">Quick Links</h3>
        <ul class="footer-links">
          {% for link in linklists.footer.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Customer Service -->
      <div class="footer-column">
        <h3 class="footer-title">Customer Service</h3>
        <ul class="footer-links">
          <li><a href="/pages/contact">Contact Us</a></li>
          <li><a href="/pages/shipping">Shipping Info</a></li>
          <li><a href="/pages/returns">Returns</a></li>
          <li><a href="/pages/faq">FAQ</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-column">
        <h3 class="footer-title">Stay Connected</h3>
        <p>Subscribe to our newsletter for updates</p>
        {% form 'customer' %}
          <input type="email" name="contact[email]" placeholder="Your email" required>
          <button type="submit" class="btn btn-primary">Subscribe</button>
        {% endform %}

        <!-- Social Icons -->
        <div class="footer-social" style="margin-top: 2rem;">
          {% if settings.social_facebook %}
            <a href="{{ settings.social_facebook }}" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_instagram %}
            <a href="{{ settings.social_instagram }}" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_twitter %}
            <a href="{{ settings.social_twitter }}" aria-label="Twitter">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_pinterest %}
            <a href="{{ settings.social_pinterest }}" aria-label="Pinterest">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M8 11.2c0-2.5 1.4-4.6 3.7-4.6 1.5 0 2.3.8 2.3 1.9 0 1.2-.8 2.8-1.2 4.3-.3 1.3.6 2.3 1.9 2.3 2.3 0 3.8-2.9 3.8-6.3 0-2.6-1.8-4.5-5-4.5-3.7 0-6 2.8-6 5.9 0 1.1.3 1.8.8 2.4.2.2.2.3.2.6 0 .4-.3 1.4-.3 1.6-.1.3-.3.4-.6.2-1.6-.7-2.3-2.5-2.3-4.6z"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <div class="payment-icons">
        <span>We accept:</span>
        <img src="https://cdn.shopify.com/s/files/1/0070/7032/files/payment_icons.png" alt="Payment methods" height="20">
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 4rem;
    padding: 6rem 0 4rem;
    border-top: 1px solid rgba(95, 5, 17, 0.1);
  }

  .footer-column h3 {
    color: var(--color-brand-primary);
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: var(--color-brand-dark);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--color-brand-accent);
  }

  .footer-column form {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .footer-column input[type="email"] {
    flex: 1;
    padding: 1.2rem;
    border: 1px solid rgba(95, 5, 17, 0.2);
    border-radius: 8px;
    font-size: 1.4rem;
  }

  .footer-social {
    display: flex;
    gap: 1.5rem;
  }

  .footer-social a {
    color: var(--color-brand-primary);
    transition: color 0.3s ease;
  }

  .footer-social a:hover {
    color: var(--color-brand-accent);
  }

  .footer-social svg {
    width: 2.4rem;
    height: 2.4rem;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3rem 0;
    border-top: 1px solid rgba(95, 5, 17, 0.1);
    font-size: 1.4rem;
  }

  .payment-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-column form {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_about_text",
      "label": "About Text",
      "default": "Exquisite handcrafted sarees celebrating Indian tradition and elegance."
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "social_pinterest",
      "label": "Pinterest URL"
    }
  ]
}
{% endschema %}
