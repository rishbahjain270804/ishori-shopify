<wishlist-section-{{ ai_gen_id }} class="ai-wishlist-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-wishlist-header-{{ ai_gen_id }}">
    <h1 class="ai-wishlist-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    <div class="ai-wishlist-count-{{ ai_gen_id }}" data-wishlist-count></div>
  </div>

  <div class="ai-wishlist-loading-{{ ai_gen_id }}" data-wishlist-loading>
    Loading your wishlist...
  </div>

  <div class="ai-wishlist-grid-{{ ai_gen_id }}" data-wishlist-grid style="display: none;"></div>

  <div class="ai-wishlist-empty-{{ ai_gen_id }}" data-wishlist-empty style="display: none;">
    <div class="ai-wishlist-empty-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
