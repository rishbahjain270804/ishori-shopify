{% doc %}
  @prompt
    Create a customizable product showcase section with blocks for adding/removing products. Include settings for grid layout (2-4 columns), product card style, show/hide price, show/hide add to cart button, heading text, spacing controls, and background color. Make it fully editable through sidebar with drag and drop product blocks.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-showcase-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-product-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    {% if block.settings.card_style == 'bordered' %}
      border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    {% endif %}
    {% if block.settings.card_style == 'shadow' %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    {% if block.settings.card_hover_effect %}
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    {% endif %}
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-grow: 1;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-card-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-card-title-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    text-align: {{ block.settings.text_alignment }};
    font-weight: 600;
  }

  .ai-product-card-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
    font-weight: 400;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    margin-top: auto;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    display: block;
    transition: background-color 0.3s ease;
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.75 }}px 0 {{ block.settings.padding_bottom | times: 0.75 }}px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      padding: 0 3rem;
    }

    .ai-product-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.85 }}px;
    }

    .ai-product-showcase-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
      margin-bottom: {{ block.settings.heading_spacing | times: 0.85 }}px;
    }

    .ai-product-card-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.85 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | divided_by: 2 }}px 0 {{ block.settings.padding_bottom | divided_by: 2 }}px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      padding: 0 1.5rem;
    }

    .ai-product-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | divided_by: 2 }}px;
    }

    .ai-product-showcase-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.65 }}px;
      margin-bottom: {{ block.settings.heading_spacing | divided_by: 2 }}px;
    }

    .ai-product-card-{{ ai_gen_id }} {
      border-radius: {{ block.settings.card_border_radius | times: 0.75 }}px;
    }

    .ai-product-card-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
      gap: 6px;
    }

    .ai-product-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.875 }}px;
    }

    .ai-product-card-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.875 }}px;
    }

    .ai-product-card-button-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: 13px;
    }

    .ai-product-empty-state-{{ ai_gen_id }} {
      padding: 40px 15px;
      font-size: 14px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-showcase-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-product-showcase-grid-{{ ai_gen_id }}">
      {% assign product_list = block.settings.products %}
      {% if product_list.count > 0 %}
        {% for product in product_list %}
          <div class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-product-card-content-{{ ai_gen_id }}">
              <h3 class="ai-product-card-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              {% if block.settings.show_price %}
                <div class="ai-product-card-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-card-price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_add_to_cart %}
                <a
                  href="{{ product.url }}"
                  class="ai-product-card-button-{{ ai_gen_id }}"
                >
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="ai-product-empty-state-{{ ai_gen_id }}">
          Select products to showcase in your store
        </div>
      {% endif %}
    </div>
  </div>
</div>

