<script>
  (function() {
    class InfiniteGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.autoplayInterval = null;
        this.isTransitioning = false;
        this.lightboxIndex = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-gallery-track-{{ ai_gen_id }}');
        this.slides = Array.from(this.querySelectorAll('.ai-gallery-slide-{{ ai_gen_id }}'));
        this.prevBtn = this.querySelector('.ai-gallery-nav-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-gallery-nav-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-gallery-dots-{{ ai_gen_id }}');
        this.lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        this.lightboxImage = this.querySelector('.ai-gallery-lightbox-image-{{ ai_gen_id }}');
        this.lightboxCaption = this.querySelector('.ai-gallery-lightbox-caption-{{ ai_gen_id }}');
        this.lightboxClose = this.querySelector('.ai-gallery-lightbox-close-{{ ai_gen_id }}');
        this.lightboxPrev = this.querySelector('.ai-gallery-lightbox-prev-{{ ai_gen_id }}');
        this.lightboxNext = this.querySelector('.ai-gallery-lightbox-next-{{ ai_gen_id }}');

        if (this.slides.length === 0) return;

        this.slidesPerView = {{ block.settings.slides_per_view }};
        this.autoplaySpeed = {{ block.settings.autoplay_speed }};
        this.autoplayEnabled = {{ block.settings.enable_autoplay }};

        if (window.innerWidth <= 989) {
          this.slidesPerView = 1;
        } else if (window.innerWidth <= 1200) {
          this.slidesPerView = 2;
        }

        this.cloneSlides();
        this.createDots();
        this.setupEventListeners();
        this.updateCarousel(false);

        if (this.autoplayEnabled) {
          this.startAutoplay();
        }
      }

      cloneSlides() {
        const cloneCount = this.slidesPerView * 2;
        for (let i = 0; i < cloneCount; i++) {
          const cloneStart = this.slides[i % this.slides.length].cloneNode(true);
          const cloneEnd = this.slides[this.slides.length - 1 - (i % this.slides.length)].cloneNode(true);
          this.track.appendChild(cloneStart);
          this.track.insertBefore(cloneEnd, this.track.firstChild);
        }
        this.currentIndex = cloneCount;
      }

      createDots() {
        if (!this.dotsContainer) return;
        this.dotsContainer.innerHTML = '';
        for (let i = 0; i < this.slides.length; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-gallery-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', 'Go to slide ' + (i + 1));
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;
        const dots = this.dotsContainer.querySelectorAll('.ai-gallery-dot-{{ ai_gen_id }}');
        const actualIndex = this.getActualIndex();
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === actualIndex);
        });
      }

      getActualIndex() {
        const cloneCount = this.slidesPerView * 2;
        let index = this.currentIndex - cloneCount;
        while (index < 0) index += this.slides.length;
        return index % this.slides.length;
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prev());
        }
        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.next());
        }

        this.slides.forEach((slide, index) => {
          slide.addEventListener('click', () => this.openLightbox(index));
        });

        if (this.lightboxClose) {
          this.lightboxClose.addEventListener('click', () => this.closeLightbox());
        }
        if (this.lightboxPrev) {
          this.lightboxPrev.addEventListener('click', () => this.lightboxPrevImage());
        }
        if (this.lightboxNext) {
          this.lightboxNext.addEventListener('click', () => this.lightboxNextImage());
        }
        if (this.lightbox) {
          this.lightbox.addEventListener('click', (e) => {
            if (e.target === this.lightbox) {
              this.closeLightbox();
            }
          });
        }

        document.addEventListener('keydown', (e) => {
          if (this.lightbox.classList.contains('active')) {
            if (e.key === 'Escape') this.closeLightbox();
            if (e.key === 'ArrowLeft') this.lightboxPrevImage();
            if (e.key === 'ArrowRight') this.lightboxNextImage();
          }
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplayEnabled) this.startAutoplay();
        });
      }

      updateCarousel(animate = true) {
        const slideWidth = this.slides[0].offsetWidth;
        const gap = {{ block.settings.slide_spacing }};
        const offset = -(this.currentIndex * (slideWidth + gap));
        
        if (animate) {
          this.track.style.transition = 'transform 0.5s ease';
        } else {
          this.track.style.transition = 'none';
        }
        
        this.track.style.transform = `translateX(${offset}px)`;
        this.updateDots();

        if (animate) {
          this.isTransitioning = true;
          setTimeout(() => {
            this.isTransitioning = false;
            this.checkInfiniteLoop();
          }, 500);
        }
      }

      checkInfiniteLoop() {
        const cloneCount = this.slidesPerView * 2;
        const totalSlides = this.track.children.length;

        if (this.currentIndex >= totalSlides - cloneCount) {
          this.currentIndex = cloneCount;
          this.updateCarousel(false);
        } else if (this.currentIndex < cloneCount) {
          this.currentIndex = totalSlides - cloneCount - this.slidesPerView;
          this.updateCarousel(false);
        }
      }

      next() {
        if (this.isTransitioning) return;
        this.currentIndex++;
        this.updateCarousel(true);
      }

      prev() {
        if (this.isTransitioning) return;
        this.currentIndex--;
        this.updateCarousel(true);
      }

      goToSlide(index) {
        const cloneCount = this.slidesPerView * 2;
        this.currentIndex = cloneCount + index;
        this.updateCarousel(true);
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.next();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      openLightbox(index) {
        this.lightboxIndex = index;
        const slide = this.slides[index];
        const img = slide.querySelector('.ai-gallery-slide-image-{{ ai_gen_id }}');
        const caption = slide.querySelector('.ai-gallery-slide-caption-{{ ai_gen_id }}');

        if (img) {
          this.lightboxImage.src = img.src;
          this.lightboxImage.alt = img.alt;
          this.lightboxCaption.textContent = caption ? caption.textContent : '';
          this.lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      }

