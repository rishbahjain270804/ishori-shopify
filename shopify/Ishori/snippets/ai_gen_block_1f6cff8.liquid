    <p class="ai-wishlist-empty-text-{{ ai_gen_id }}">{{ block.settings.empty_text }}</p>
    <a href="{{ block.settings.shop_button_link }}" class="ai-wishlist-shop-button-{{ ai_gen_id }}">
      {{ block.settings.shop_button_text }}
    </a>
  </div>
</wishlist-section-{{ ai_gen_id }}>

<script>
  (function() {
    class WishlistSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.loadingEl = this.querySelector('[data-wishlist-loading]');
        this.gridEl = this.querySelector('[data-wishlist-grid]');
        this.emptyEl = this.querySelector('[data-wishlist-empty]');
        this.countEl = this.querySelector('[data-wishlist-count]');
      }

      connectedCallback() {
        this.loadWishlist();
      }

      getWishlistItems() {
        try {
          const items = localStorage.getItem('ishori_wishlist');
          return items ? JSON.parse(items) : [];
        } catch (e) {
          console.error('Error reading wishlist:', e);
          return [];
        }
      }

      saveWishlistItems(items) {
        try {
          localStorage.setItem('ishori_wishlist', JSON.stringify(items));
        } catch (e) {
          console.error('Error saving wishlist:', e);
        }
      }

      async loadWishlist() {
        const items = this.getWishlistItems();
        
        if (items.length === 0) {
          this.showEmpty();
          return;
        }

        this.updateCount(items.length);
        
        try {
          const productPromises = items.map(item => this.fetchProduct(item.handle));
          const products = await Promise.all(productPromises);
          
          this.renderProducts(products, items);
          this.showGrid();
        } catch (error) {
          console.error('Error loading wishlist products:', error);
          this.showEmpty();
        }
      }

      async fetchProduct(handle) {
        const response = await fetch(`/products/${handle}.js`);
        if (!response.ok) throw new Error('Product not found');
        return response.json();
      }

      renderProducts(products, wishlistItems) {
        this.gridEl.innerHTML = '';
        
        products.forEach((product, index) => {
          const wishlistItem = wishlistItems[index];
          const card = this.createProductCard(product, wishlistItem);
          this.gridEl.appendChild(card);
        });
      }

      createProductCard(product, wishlistItem) {
        const card = document.createElement('div');
        card.className = 'ai-wishlist-card-{{ ai_gen_id }}';
        card.dataset.productHandle = product.handle;

        const selectedVariant = product.variants.find(v => v.id === wishlistItem.variantId) || product.variants[0];
        const image = selectedVariant.featured_image || product.featured_image;

        card.innerHTML = `
          <button class="ai-wishlist-remove-{{ ai_gen_id }}" data-remove-item="${product.handle}" aria-label="Remove from wishlist">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="4" x2="4" y2="12"></line>
              <line x1="4" y1="4" x2="12" y2="12"></line>
            </svg>
          </button>
          
          <div class="ai-wishlist-image-wrapper-{{ ai_gen_id }}">
            <img 
              src="${image}" 
              alt="${product.title}" 
              class="ai-wishlist-image-{{ ai_gen_id }}"
              loading="lazy"
            >
          </div>
          
          <div class="ai-wishlist-content-{{ ai_gen_id }}">
            <a href="/products/${product.handle}" class="ai-wishlist-title-{{ ai_gen_id }}">
              ${product.title}
            </a>
            
            <div class="ai-wishlist-price-{{ ai_gen_id }}">
              ${this.formatMoney(selectedVariant.price)}
            </div>
            
            ${product.variants.length > 1 ? `
              <div class="ai-wishlist-variant-selector-{{ ai_gen_id }}">
                <label class="ai-wishlist-variant-label-{{ ai_gen_id }}">
                  ${product.options[0].name}
                </label>
                <select class="ai-wishlist-variant-select-{{ ai_gen_id }}" data-variant-select>
                  ${product.variants.map(variant => `
                    <option value="${variant.id}" ${variant.id === selectedVariant.id ? 'selected' : ''}>
                      ${variant.title}
                    </option>
                  `).join('')}
                </select>
              </div>
            ` : ''}
            
            <button 
              class="ai-wishlist-add-to-cart-{{ ai_gen_id }}" 
              data-add-to-cart
              data-variant-id="${selectedVariant.id}"
              ${!selectedVariant.available ? 'disabled' : ''}
            >
              ${selectedVariant.available ? '{{ block.settings.add_to_cart_text }}' : '{{ block.settings.sold_out_text }}'}
            </button>
          </div>
        `;

        const removeBtn = card.querySelector('[data-remove-item]');
        removeBtn.addEventListener('click', () => this.removeItem(product.handle));

        const addToCartBtn = card.querySelector('[data-add-to-cart]');
        addToCartBtn.addEventListener('click', () => this.addToCart(addToCartBtn));

        const variantSelect = card.querySelector('[data-variant-select]');
        if (variantSelect) {
          variantSelect.addEventListener('change', (e) => {
            const newVariantId = parseInt(e.target.value);
            const newVariant = product.variants.find(v => v.id === newVariantId);
            
            addToCartBtn.dataset.variantId = newVariantId;
            addToCartBtn.disabled = !newVariant.available;
            addToCartBtn.textContent = newVariant.available ? '{{ block.settings.add_to_cart_text }}' : '{{ block.settings.sold_out_text }}';
            
            this.updateWishlistVariant(product.handle, newVariantId);
          });
        }

        return card;
      }

      updateWishlistVariant(handle, variantId) {
        const items = this.getWishlistItems();
        const itemIndex = items.findIndex(item => item.handle === handle);
        if (itemIndex !== -1) {
          items[itemIndex].variantId = variantId;
          this.saveWishlistItems(items);
        }
      }

      async addToCart(button) {
        const variantId = button.dataset.variantId;
        button.disabled = true;
        button.textContent = 'Adding...';

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: 1
            })
          });

          if (!response.ok) throw new Error('Failed to add to cart');

          button.textContent = 'Added!';
          
          setTimeout(() => {
            button.disabled = false;
            button.textContent = '{{ block.settings.add_to_cart_text }}';
          }, 2000);

          document.dispatchEvent(new CustomEvent('cart:refresh'));
        } catch (error) {
          console.error('Error adding to cart:', error);
          button.disabled = false;
          button.textContent = 'Error - Try again';
          
          setTimeout(() => {
            button.textContent = '{{ block.settings.add_to_cart_text }}';
          }, 2000);
        }
      }

      removeItem(handle) {
        const items = this.getWishlistItems();
        const updatedItems = items.filter(item => item.handle !== handle);
        this.saveWishlistItems(updatedItems);
        
        const card = this.querySelector(`[data-product-handle="${handle}"]`);
        if (card) {
          card.style.opacity = '0';
          card.style.transform = 'scale(0.9)';
          setTimeout(() => {
            card.remove();
            if (updatedItems.length === 0) {
              this.showEmpty();
            } else {
              this.updateCount(updatedItems.length);
            }
          }, 300);
        }
      }

      formatMoney(cents) {
        const amount = cents / 100;
        return new Intl.NumberFormat('en-IN', {
          style: 'currency',
          currency: 'INR'
        }).format(amount);
      }

      updateCount(count) {
        this.countEl.textContent = `${count} ${count === 1 ? 'item' : 'items'}`;
      }

      showGrid() {
        this.loadingEl.style.display = 'none';
        this.emptyEl.style.display = 'none';
        this.gridEl.style.display = 'grid';
      }

      showEmpty() {
        this.loadingEl.style.display = 'none';
        this.gridEl.style.display = 'none';
        this.emptyEl.style.display = 'block';
        this.countEl.textContent = '0 items';
      }
    }

    customElements.define('wishlist-section-{{ ai_gen_id }}', WishlistSection{{ ai_gen_id }});
  })();
</script>

