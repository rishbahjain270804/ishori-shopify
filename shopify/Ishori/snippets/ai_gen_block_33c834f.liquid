{% doc %}
  @prompt
    Create a featured collections grid section displaying 4 collection cards in a 2x2 grid layout. Each card should show a collection image with overlay text showing the collection title and a subtle hover effect. Include a "Shop Now" button that appears on hover. Make it fully responsive (2 columns on tablet, 1 column on mobile). Allow selection of collections and customization of layout through the theme editor.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collections-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-featured-collections__wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collections__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-featured-collections__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-collections__card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    cursor: pointer;
  }

  .ai-featured-collections__card-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    position: relative;
  }

  .ai-featured-collections__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-featured-collections__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-featured-collections__card-{{ ai_gen_id }}:hover .ai-featured-collections__image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_scale_hover }});
  }

  .ai-featured-collections__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collections__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-featured-collections__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: {{ block.settings.card_padding }}px;
    transition: background 0.3s ease;
  }

  .ai-featured-collections__card-{{ ai_gen_id }}:hover .ai-featured-collections__overlay-{{ ai_gen_id }} {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity_hover }}) 100%
    );
  }

  .ai-featured-collections__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 12px;
    font-weight: 600;
    transition: transform 0.3s ease;
  }

  .ai-featured-collections__card-{{ ai_gen_id }}:hover .ai-featured-collections__title-{{ ai_gen_id }} {
    transform: translateY(-4px);
  }

  .ai-featured-collections__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease, background-color 0.3s ease;
  }

  .ai-featured-collections__card-{{ ai_gen_id }}:hover .ai-featured-collections__button-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-featured-collections__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_bg_hover_color }};
  }

  .ai-featured-collections__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-featured-collections__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-featured-collections__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }

    .ai-featured-collections__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collections__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-featured-collections__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.75);
    }

    .ai-featured-collections__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }

    .ai-featured-collections__button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_font_size }}px * 0.9);
      padding: 10px 20px;
    }

    .ai-featured-collections__overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-featured-collections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collections__wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-featured-collections__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-featured-collections__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}

        <div class="ai-featured-collections__card-{{ ai_gen_id }}">
          {% if collection != blank %}
            <a
              href="{{ collection.url }}"
              class="ai-featured-collections__card-link-{{ ai_gen_id }}"
              aria-label="{{ collection.title }}"
            >
              <div class="ai-featured-collections__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="800"
                    class="ai-featured-collections__image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-featured-collections__placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-featured-collections__overlay-{{ ai_gen_id }}">
                <h3 class="ai-featured-collections__title-{{ ai_gen_id }}">
                  {{ collection.title }}
                </h3>
                <span class="ai-featured-collections__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </span>
              </div>
            </a>
          {% else %}
            <div class="ai-featured-collections__card-link-{{ ai_gen_id }}">
              <div class="ai-featured-collections__image-wrapper-{{ ai_gen_id }}">
                <div class="ai-featured-collections__placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                  <div class="ai-featured-collections__empty-state-{{ ai_gen_id }}">
                    Select a collection
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

